{
  "compilerOptions": {
    "incremental": false,

    "target": "esnext",
    "jsx": "react",

    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "noEmit": true,

    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,

    "strict": true,

    "skipLibCheck": true
  }
}
